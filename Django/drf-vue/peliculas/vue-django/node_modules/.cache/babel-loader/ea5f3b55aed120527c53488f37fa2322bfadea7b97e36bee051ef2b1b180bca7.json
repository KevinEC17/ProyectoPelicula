{"ast":null,"code":"import axios from 'axios';\nimport NavigationComponentVue from '../components/NavigationComponent.vue';\nimport { ref, onMounted } from 'vue';\nconst allFilms = ref([]);\nconst filteredFilms = ref([]);\nconst categoryRecived = ref(null);\nconst categoryID = (categoryID, categoryName) => {\n  categoryRecived.value = categoryName;\n  if (categoryID) {\n    filteredFilms.value = allFilms.value.filter(film => film.category === categoryID);\n  } else {\n    filteredFilms.value = allFilms.value;\n  }\n};\nconst resetFilter = () => {\n  categoryRecived.value = null;\n  filteredFilms.value = allFilms.value;\n};\nonMounted(() => {\n  axios.get('http://127.0.0.1:8000/api/films/').then(response => {\n    allFilms.value = response.data;\n    filteredFilms.value = allFilms.value;\n  }).catch(error => {\n    console.log(error);\n  });\n});","map":{"version":3,"names":["axios","NavigationComponentVue","ref","onMounted","allFilms","filteredFilms","categoryRecived","categoryID","categoryName","value","filter","film","category","resetFilter","get","then","response","data","catch","error","console","log"],"sources":["C:\\Users\\Usuario\\Desktop\\Django\\drf-vue\\peliculas\\vue-django\\src\\views\\HomeView.vue"],"sourcesContent":["<template>\n\n  <navigation-component-vue @getCategoryID=\"categoryID\"/>\n  <div v-if=\"categoryRecived\">\n    <h3>Peliculas de {{  categoryRecived }}</h3>\n    <button class=\"btn btn-warning\" @click=\"resetFilter\">Mostrar todas las peliculas</button>\n    <div class=\"alert alert-danger m-3\" role=\"alert\" v-if=\"filteredFilms.length === 0\">\n      No existen peliculas de esta categoria\n    </div>\n  </div>\n\n  <div>\n    <div class=\"d-flex flex-wrap\">\n      <div class=\"card m-3\" style=\"width: 15rem;\" v-for=\"film in filteredFilms\" :key=\"film.id\">\n        <img :src=\"film.image\" id=\"imgPel\" class=\"img-fluid p-3\" alt=\"Poster de {{ film.title }}\" style=\"width: 15rem; height: 21rem\">\n        <div class=\"card-body\">\n          <h3 class=\"card-title mb-3\">{{ film.title }}</h3>\n          <p class=\"card-text mb-1\">{{ film.description }}</p>\n          <p class=\"card-text mb-1\">{{ film.publication }}</p>\n          <p class=\"card-text mb-1\">{{ film.category_name }}</p>\n        </div>\n      </div>\n    </div>\n    <hr>\n  </div>\n</template>\n\n<script>\n  import axios from 'axios'\n  import NavigationComponentVue from '../components/NavigationComponent.vue'\n  import { ref, onMounted } from 'vue'\n\n  const allFilms = ref([])\n  const filteredFilms = ref([])\n  const categoryRecived = ref (null)\n\n  const categoryID = (categoryID, categoryName) => {\n    categoryRecived.value = categoryName\n    if(categoryID){\n      filteredFilms.value = allFilms.value.filter((film) => film.category === categoryID)\n    }\n    else{\n       filteredFilms.value = allFilms.value\n    }\n  }\n  \n  const resetFilter = () => {\n    categoryRecived.value = null\n    filteredFilms.value = allFilms.value\n  }\n    \n  onMounted (() => {\n    axios.get('http://127.0.0.1:8000/api/films/')\n    .then( response => {\n      allFilms.value = response.data\n      filteredFilms.value = allFilms.value\n    })\n    .catch( error => {\n      console.log(error)\n    })\n  })\n</script>\n\n<style>\n\n</style>"],"mappings":"AA4BE,OAAOA,KAAI,MAAO,OAAM;AACxB,OAAOC,sBAAqB,MAAO,uCAAsC;AACzE,SAASC,GAAG,EAAEC,SAAQ,QAAS,KAAI;AAEnC,MAAMC,QAAO,GAAIF,GAAG,CAAC,EAAE;AACvB,MAAMG,aAAY,GAAIH,GAAG,CAAC,EAAE;AAC5B,MAAMI,eAAc,GAAIJ,GAAE,CAAG,IAAI;AAEjC,MAAMK,UAAS,GAAIA,CAACA,UAAU,EAAEC,YAAY,KAAK;EAC/CF,eAAe,CAACG,KAAI,GAAID,YAAW;EACnC,IAAGD,UAAU,EAAC;IACZF,aAAa,CAACI,KAAI,GAAIL,QAAQ,CAACK,KAAK,CAACC,MAAM,CAAEC,IAAI,IAAKA,IAAI,CAACC,QAAO,KAAML,UAAU;EACpF,OACI;IACDF,aAAa,CAACI,KAAI,GAAIL,QAAQ,CAACK,KAAI;EACtC;AACF;AAEA,MAAMI,WAAU,GAAIA,CAAA,KAAM;EACxBP,eAAe,CAACG,KAAI,GAAI,IAAG;EAC3BJ,aAAa,CAACI,KAAI,GAAIL,QAAQ,CAACK,KAAI;AACrC;AAEAN,SAAQ,CAAG,MAAM;EACfH,KAAK,CAACc,GAAG,CAAC,kCAAkC,EAC3CC,IAAI,CAAEC,QAAO,IAAK;IACjBZ,Q